{
  "swagger": "2.0",
  "info": {
    "title": "kdo/v1/order.proto",
    "version": "version not set"
  },
  "tags": [
    {
      "name": "OrderService"
    }
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/orders": {
      "post": {
        "summary": "신규 주문 제출",
        "operationId": "OrderService_SubmitOrder",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/orderSubmitOrderResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/orderSubmitOrderRequest"
            }
          }
        ],
        "tags": [
          "OrderService"
        ]
      }
    },
    "/v1/orders/{originalOrderId}:amend": {
      "post": {
        "summary": "정정 주문",
        "operationId": "OrderService_AmendOrder",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/orderAmendOrderResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "originalOrderId",
            "description": "원주문 ID",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "uint64"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "fundCode": {
                  "type": "string",
                  "title": "펀드 코드"
                },
                "symbol": {
                  "type": "string",
                  "title": "종목 코드"
                },
                "quantity": {
                  "type": "string",
                  "format": "int64",
                  "title": "정정 수량"
                },
                "price": {
                  "type": "string",
                  "format": "int64",
                  "title": "정정 가격"
                },
                "side": {
                  "$ref": "#/definitions/v1orderOrderSide",
                  "title": "매수/매도"
                }
              },
              "required": [
                "fundCode",
                "symbol",
                "quantity",
                "price",
                "side"
              ]
            }
          }
        ],
        "tags": [
          "OrderService"
        ]
      }
    },
    "/v1/orders/{originalOrderId}:cancel": {
      "post": {
        "summary": "취소 주문",
        "operationId": "OrderService_CancelOrder",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/orderCancelOrderResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "originalOrderId",
            "description": "원주문 ID",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "uint64"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "fundCode": {
                  "type": "string",
                  "title": "펀드 코드"
                },
                "symbol": {
                  "type": "string",
                  "title": "종목 코드"
                },
                "quantity": {
                  "type": "string",
                  "format": "int64",
                  "title": "정정 수량"
                },
                "side": {
                  "$ref": "#/definitions/v1orderOrderSide",
                  "title": "매수/매도"
                }
              },
              "required": [
                "fundCode",
                "symbol",
                "quantity",
                "side"
              ]
            }
          }
        ],
        "tags": [
          "OrderService"
        ]
      }
    }
