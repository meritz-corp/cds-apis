  "definitions": {
    "orderAmendOrderResponse": {
      "type": "object",
      "properties": {
        "orderId": {
          "type": "string",
          "format": "uint64",
          "title": "신규 주문 ID"
        },
        "originalOrderId": {
          "type": "string",
          "format": "uint64",
          "title": "원주문 ID"
        },
        "status": {
          "$ref": "#/definitions/orderOrderStatus",
          "title": "주문 상태"
        },
        "message": {
          "type": "string",
          "title": "결과 메시지"
        }
      }
    },
    "orderCancelOrderResponse": {
      "type": "object",
      "properties": {
        "orderId": {
          "type": "string",
          "format": "uint64",
          "title": "취소 주문 ID"
        },
        "originalOrderId": {
          "type": "string",
          "format": "uint64",
          "title": "원주문 ID"
        },
        "status": {
          "$ref": "#/definitions/orderOrderStatus",
          "title": "주문 상태"
        },
        "message": {
          "type": "string",
          "title": "결과 메시지"
        }
      }
    },
    "orderOrderStatus": {
      "type": "string",
      "enum": [
        "ORDER_STATUS_UNSPECIFIED",
        "ORDER_STATUS_SUBMITTED",
        "ORDER_STATUS_REJECTED"
      ],
      "default": "ORDER_STATUS_UNSPECIFIED",
      "title": "- ORDER_STATUS_SUBMITTED: 주문 제출됨\n - ORDER_STATUS_REJECTED: 거부됨 (validation 실패)"
    },
    "orderQuoteType": {
      "type": "string",
      "enum": [
        "QUOTE_TYPE_UNSPECIFIED",
        "QUOTE_TYPE_LIMIT",
        "QUOTE_TYPE_MARKET"
      ],
      "default": "QUOTE_TYPE_UNSPECIFIED",
      "title": "- QUOTE_TYPE_LIMIT: 지정가\n - QUOTE_TYPE_MARKET: 시장가"
    },
    "orderSubmitOrderRequest": {
      "type": "object",
      "properties": {
        "fundCode": {
          "type": "string",
          "title": "펀드 코드 (필수)"
        },
        "symbol": {
          "type": "string",
          "title": "종목 코드 ISIN (필수)"
        },
        "side": {
          "$ref": "#/definitions/v1orderOrderSide",
          "title": "매수/매도 (필수)"
        },
        "quantity": {
          "type": "string",
          "format": "int64",
          "title": "수량 (필수)"
        },
        "price": {
          "type": "string",
          "format": "int64",
          "title": "가격 (필수, 시장가 주문 시 0)"
        },
        "quoteType": {
          "$ref": "#/definitions/orderQuoteType",
          "title": "주문 유형 (기본: LIMIT)"
        }
      },
      "required": [
        "fundCode",
        "symbol",
        "side",
        "quantity",
        "price"
      ]
    },
    "orderSubmitOrderResponse": {
      "type": "object",
      "properties": {
        "orderId": {
          "type": "string",
          "format": "uint64",
          "title": "주문 ID"
        },
        "status": {
          "$ref": "#/definitions/orderOrderStatus",
          "title": "주문 상태"
        },
        "message": {
          "type": "string",
          "title": "결과 메시지"
        }
      }
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    },
    "v1orderOrderSide": {
      "type": "string",
      "enum": [
        "ORDER_SIDE_UNSPECIFIED",
        "ORDER_SIDE_BID",
        "ORDER_SIDE_ASK"
      ],
      "default": "ORDER_SIDE_UNSPECIFIED",
      "title": "- ORDER_SIDE_BID: 매수\n - ORDER_SIDE_ASK: 매도"
    }
  }
}
